#include <unistd.h>
void	ft_comb_loop(int col[4]);

void	ft_putchar(int col[4])
{
	write(1, &col[0], 1);
	write(1, &col[1], 1);
	write(1, " ", 1);
	write(1, &col[2], 1);
	write(1, &col[3], 1);
	if (col[0] != '9' || col[1] != '8' || col[2] != '9' || col[3] != '9')
		write(1, ", ", 2);
}

void	ft_print_comb2(void)
{
	int	col[4];

	col[0] = '0';
	col[1] = '0';
	col[2] = '0';
	col[3] = '1';
	ft_comb_loop(col);
}
void	ft_comb_loop(int col[4])
{
	while (col[0] <= '9')
	{
		while (col[1] <= '9')
		{
			while (col[2] <= '9')
			{
				while (col[3] <= '9')
				{
					ft_putchar(col);
					col[3]++;
				}
				col[3] = '0';
				col[2]++;
			}
			col[2] = '0';
			col[1]++;
		}
		col[0]++;
	}
}

int main()
{
	ft_print_comb2();
}
